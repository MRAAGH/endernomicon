    "pages": [
        {
            "type": "patchouli:spotlight",
            "item": "supplementaries:hanging_sign_oak",
            "text": "$(li)The Hanging Sign is a decorative block that comes in all wood types.$(br)$(li)It can be placed under or on the side of a block, $(l:patchouli:decoration/others/fences)Fence$(/l) or $(l:patchouli:decoration/others/walls)Walls$(/l).$(br)$(li)They will swing back and forth when an entity collides with it."
        },
        {
            "type": "patchouli:small_pictures",
            "picture": "endermonicon:textures/book/entries/decoration/hanging_sign_1.png",
            "text": "$(li)You can write text on them by right-cliking the sign with an empty hand."
        },
        {
            "type": "patchouli:small_pictures",
            "picture": "endermonicon:textures/book/entries/decoration/hanging_sign_2.png",
            "text": "$(li)You can right-click any item onto the sign to display it too."
        },
        {
            "type": "patchouli:small_pictures",
            "picture": "endermonicon:textures/book/entries/decoration/hanging_sign_3.png",
            "text": "$(li)The block can also display $(l:patchouli:tools/vanilla/map)Maps$(/l) as well as $(l:patchouli:decoration/alexsmobs/banner_patterns)Banner Patterns$(/l)."
        },
